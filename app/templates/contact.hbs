{{outlet}}
<h1>Contact Page</h1>
<div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    {{input type="email" class="form-control" value=model.email
    placeholder="Please type your e-mail address." autofocus="autofocus"}}
</div>
<div class="form-group">
    {{ textarea class="form-control" rows="7" placeholder="Your message. (At least 5 characters.)" value=model.message}}
</div>
<button class="btn btn-primary btn-lg btn-block" {{action 'saveContact' model}} disabled={{model.isNotValid}}>Submit</button>
{{#if model.responseMessage}}
    <div class="alert alert-success">{{model.responseMessage}}</div>
{{/if}}